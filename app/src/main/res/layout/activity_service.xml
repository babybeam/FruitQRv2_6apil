<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/layoutDrawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity">

    <!--Content-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Tooolbar--> <!--Tsupport.v7.widget.Toolbar-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toobarService"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>


        <!--Fragment-->
        <FrameLayout
            android:id="@+id/contentServiceFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>





    <!--DrawerLayout-->         <!--android:layout_gravity="start"  ทำให้มีแถยด้านข้างสีขาว-->

    <LinearLayout

        android:layout_width="320dp"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/welcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Menu :"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--หน้าหลัก-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_home" />

            <!--Title-->
            <TextView
                android:id="@+id/action_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    หน้าหลัก"
                android:textSize="@dimen/h2" />


        </LinearLayout>

        <!--สแกน-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_qrb" />

            <!--Title-->
            <TextView
                android:id="@+id/action_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    สแกน QR Code"
                android:textSize="@dimen/h2" />

        </LinearLayout>

        <!--รายการผลผลิต-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_listframer" />

            <!--Title-->
            <TextView
                android:id="@+id/action_farmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    รายการผลผลิต"
                android:textSize="@dimen/h2" />

        </LinearLayout>


        <!--เพิ่มรายการผลผลิต-->
        <LinearLayout
            android:id="@+id/action_addframer"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_framer" />

            <!--Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    เพิ่มรายการผลผลิต"
                android:textSize="@dimen/h2" />

        </LinearLayout>

        <!---ข้อมูลส่วนตัว-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_register" />

            <!--Title-->
            <TextView
                android:id="@+id/action_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    ข้อมูลส่วนตัว"
                android:textSize="@dimen/h2" />

        </LinearLayout>

        <!--ช่องว่างงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงงง-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
        </LinearLayout>


        <!--ขีดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดด-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_kk" />

        </LinearLayout>

        <!--อื่นๆ-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">


            <!--Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other :"
                android:textSize="@dimen/h2" />

        </LinearLayout>


        <!--เกี่ยวกับเรา-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_fuit" />

            <!--Title-->
            <TextView
                android:id="@+id/action_aboutme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    เกี่ยวกับเรา"
                android:textSize="@dimen/h2" />

        </LinearLayout>


        <!--Exit-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <!--Icon-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_exitt" />

            <!--Title-->
            <TextView
                android:id="@+id/action_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    ออกจากระบบ"
                android:textSize="@dimen/h2" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>